{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.13.7/.schema/devbox.schema.json",
  "packages": {
    "ansible-lint":               "latest",
    "bacon":                      "latest",
    "bashInteractive":            "latest",
    "black":                      "latest",
    "cargo":                      "latest",
    "cargo-audit":                "latest",
    "cargo-edit":                 "latest",
    "cargo-feature":              "latest",
    "cargo-flamegraph":           "latest",
    "cargo-llvm-cov":             "latest",
    "coreutils":                  "latest",
    "cue":                        "latest",
    "cuelsp":                     "latest",
    "errcheck":                   "latest",
    "fzf":                        "latest",
    "git":                        "latest",
    "git-cliff":                  "latest",
    "glow":                       "latest",
    "go":                         "latest",
    "goimports":                  "latest",
    "golangci-lint":              "latest",
    "golangci-lint-langserver":   "latest",
    "golines":                    "latest",
    "gopls":                      "latest",
    "gum":                        "latest",
    "isort":                      "latest",
    "jaq":                        "latest",
    "jq":                         "latest",
    "json2yaml":                  "latest",
    "just":                       "latest",
    "moreutils":                  "latest",
    "mypy":                       "latest",
    "nerd-fonts.roboto-mono":     "latest",
    "nixfmt-rfc-style":           "latest",
    "pdm":                        "latest",
    "pylint":                     "latest",
    "pyright":                    "latest",
    "python":                     "3.12",
    "python312Packages.icecream": "latest",
    "python312Packages.ipython":  "latest",
    "revive":                     "latest",
    "roboto-mono":                "latest",
    "ruff":                       "latest",
    "ruff-lsp":                   "latest",
    "runme":                      "latest",
    "rust-analyzer":              "latest",
    "rustc":                      "latest",
    "rustfmt":                    "latest",
    "sccache":                    "latest",
    "taplo-cli":                  "latest",
    "uv":                         "latest",
    "xmlformat":                  "latest",
    "xq":                         "latest",
    "yaml-language-server":       "latest",
    "yaml-merge":                 "latest",
    "yaml2json":                  "latest",
    "yamlfix":                    "latest",
    "yamllint":                   "latest",
    "yq-go":                      "latest",
    "zsh":                        "latest",
    "openssl": {
      "version": "latest",
      "outputs": ["dev"]
    }
  },
    "env": {
      "PDM_PYTHON": ".devbox/virtenv/python/.venv",
      "VENV_DIR": ".venv"
    },
  "shell": {
    "init_hook": [
      "unset PYTHONPATH",
      "[ -d $VENV_DIR ] && . $VENV_DIR/bin/activate",
      "export GOPATH=\"${PWD}\"",
      "export GOENV=\"${PWD}/.goenv\"",
      "export GOBIN=\"${PWD}/.gobin\"",
      "export GOSRC=\"${PWD}/.gosrc\"",
      "mkdir -pv \"${GOSRC}\" \"${GOBIN}\"",
      "export GOROOT=\"$(go env GOROOT)\"",
      "export RUSTC_WRAPPER=sccache",
      "export CARGO_HOME=\"${PWD}/.cargo\"",
      "mkdir -pv \"${CARGO_HOME}\"",
      "export PATH=\"${CARGO_HOME}/bin:${GOBIN}:${PATH}\""
    ],
    "scripts":   {}
  },
  "include": []
}
